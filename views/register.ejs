<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="navbar">
    <div class="logo-container">
        <div class="logoimg">
            <img src="MinuteToManage.png" alt="Logo">
        </div>
        <div class="logo-text">
            Minute to Manage
        </div>
    </div>
  </div>


  <div class="form-container">
    <% if (message && message.length > 0) { %>
      <div style="color: red;">
        <%= message %>
      </div>
    <% } %>

    <form action="/register" method="POST" id="signup_form" class="form-group">
      <h1>Sign-Up For an Account</h1>
        
      <input type="text" id="first_name" name="first_name" required maxlength="20" placeholder="First Name (max 20 characters)">

      <input type="text" id="last_name" name="last_name" required maxlength="20" placeholder="Last Name (max 20 characters)">

      <input type="email" id="email" name="email" required placeholder="Email" maxlength="50">

      <input type="password" id="password" name="password" required minlength="6" placeholder="Password (min 6 characters)">

      <input type="password" name="confirm_password" id="confirm_password" required minlength="6"placeholder="Password (min 6 characters)">

      <button type="submit">Register</button>
    </form>
    <p>Already have an account? <a href="/">Login here</a></p>

  </div>

  

  
</body>
</html>
